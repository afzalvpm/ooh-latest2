<!doctype html>
<html class="no-js">
<head>
	<meta charset="utf-8">
	<title>Landing</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<!-- Favicons -->
	<link rel="shortcut icon" href="images/logo.png">
	
	<!-- CSS STYLES -->
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<link rel="stylesheet" type="text/css" href="css/header.css">
	<link rel="stylesheet" type="text/css" href="css/font.css">
	<link rel="stylesheet" type="text/css" href="css/sidebar.css">
	<link rel="stylesheet" type="text/css" href="css/notification.css">
	<link rel="stylesheet" type="text/css" href="css/inspection.css">
	<link rel="stylesheet" type="text/css" href="css/c3.css">

</head>
<body>
	<div class="overflow-scroll">
		<!-- Background overlay -->
		<div class="black-opc hide"></div>

		<!-- Fixed header -->
		<section class="navbar navbar-default navbar-fixed-top" id="header">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<label class="hamburger-menu">
						<img src="images/hamburger.png">
					</label>
					<a class="navbar-brand" href="#">
						<span class="enterprise-logo">
							<img src="images/logo.png">
						</span>
						<!--<span class="enterprise-name">
							Outdoor inspection Services Group
							<span class="enterprise-tagline">
							Outdoor inspection Services Group
							</span>
						</span>-->
					</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li>
							<div class="dropdown">
								<div class="profile-dropdown" data-toggle="dropdown">
									<div class="profile-desc">
										<h5>Admin</h5>
									</div>
									<img src="images/dropdown.png" class="dropdown-img">
								</div>
								<div class="notification-popup header-notification profile-popup dropdown-menu">
									<div class="notification-area">
										<div class="n-desc">
											<div class="a-profile">
												<a href="">Sign Out</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</section>
		
		<!-- main wrapper -->
		<section id="main-wrapper">
			<!-- sidebar -->
			<div id="sidebar">
				<div class="sidebar-list text-left">
					<ul class="list-unstyled">
						<li class="active">
							<a href="/inspection-landing">
								<img src="images/sidebar/inspection.png" alt="home">
								<label>inspection</label>
							</a>
						</li>
						<li>
							<a href="/jobs-landing">
								<img src="images/sidebar/jobs.png" alt="chat">
								<label>jobs</label>
							</a>
						</li>
						<li>
							<a href="maps-view">
								<img src="images/sidebar/maps.png" alt="contact">
								<label>Maps View</label>
							</a>
						</li>
						<li>
							<a href="/user-landing">
								<img src="images/sidebar/user.png" alt="profile">
								<label>Users</label>
							</a>
						</li>
					</ul>
				</div>
			</div>
			<!-- main wrapper -->
			<div class="container-fluid" id="wrapper-container">
				<div class="col-md-12 inspection-list">
					<div class="col-md-4 mpad0 text-center">
						<div class="inspection-data">
							<a href="/new-inspection">
								<img src="images/addnew.png" alt="">
								<label>Add a new inspection</label>
							</a>
						</div>
					</div>
					<div class="col-md-4 mpad0 text-center">
						<div class="inspection-data">
							<a href="/completed-inspection">
								<img src="images/progress.png" alt="">
								<label>View Completed inspection</label>
							</a>
						</div>
					</div>
					<div class="col-md-4 mpad0 text-center">
						<div class="inspection-data">
							<a href="/progress-inspection">
								<img src="images/completed.png" alt="">
								<label>Inspection in Progress</label>
							</a>
						</div>
					</div>
				</div>
				<!--subscribe chart-->
				<div class="col-md-12 mpad0">
					<div class="graph-data">
						<h5>Subscribers</h5>
						<div id="subscribe-chart"></div>
					</div>
				</div>
				<!--Job notification chart-->
				<div class="col-md-12 mpad0">
					<div class="graph-data">
						<h5>Job notification chart</h5>
						<div id="job-chart"></div>
					</div>
				</div>
			</div>
		</section>
	</div>
	<script src="js/vendor/jquery-3.1.0.min.js"></script>
	<script src="js/vendor/bootstrap.min.js"></script>
	<script src="js/vendor/d3.min.js"></script>
	<script src="js/vendor/c3.js"></script>
	<script src="js/scripts.js"></script>
	<script>
		// subscribe chart
		var splinechart = c3.generate({
			size: {
				height: 270,
			},
			bindto: '#subscribe-chart',

			padding: {
				top: 10,
				right: 15,
				bottom: 0,
				left: 40,
			},
			data: {
				columns: [
				['TotalSubscribe', 300, 350, 300, 210, 110, 90,200],
				['Ios', 130, 100, 140, 200, 150, 50,300],
				['android', 130, 120, 130, 270, 160, 80,200],
				],
				types: {
					totalSubscribe: 'spline',
					ios: 'spline',
					android: 'spline',
				},
				colors: {
					totalSubscribe: '#5cd293',
					ios: '#1a78dd',
					android: '#1a78dd',
				},

			},
			tooltip: {
				show: false
			},
			point: {
				show: false
			},
			axis: {
				x: {
					type: 'category',
					categories: ["Mon","Tue","Wed","Thu","Fri","Sat","Sun"],
					padding: {
						left: -0.5,
						right: -0.5,
					}
				},
				y: {
					padding: {bottom: 0},
					min: 0,
					tick: {
						format: d3.format("s")
					}
				},
			}
		});

	// job notification chart
	var splinechart = c3.generate({
		size: {
			height: 270,
		},
		bindto: '#job-chart',

		padding: {
			top: 10,
			right: 15,
			bottom: 0,
			left: 40,
		},
		data: {
			columns: [
			['OpenedNotification', 300, 350, 300, 0, 0, 0,200],
			['SentNotification', 130, 100, 140, 200, 150, 50,300],


			],
			types: {
				OpenedNotification: 'area-spline',
				SentNotification: 'area-spline',
			},
			colors: {
				OpenedNotification: '#5cd293',
				SentNotification: '#1a78dd',
			},
		},
		tooltip: {
			show: false
		},
		point: {
			show: false
		},
		axis: {
			x: {
				type: 'category',
				categories: ["Mon","Tue","Wed","Thu","Fri","Sat","Sun"],
				padding: {
					left: -0.5,
					right: -0.5,
				}
			},
			y: {
				padding: {bottom: 0},
				min: 0,
				tick: {
					format: d3.format("s")
				}
			},
		}
	});
</script>
</body>
</html>